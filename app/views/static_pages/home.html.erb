<% if signed_in? %>
    <div class="row">
      <aside class="span5">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
        <section>
          <h3>Recent Running Articles</h3> <br/>
          <ul>
            <% for entry in FeedEntry.all(:limit => 30, :order => "published_at desc") %>
                <li><%= link_to h(entry.name), entry.url, :target => '_blank' %></li>
            <% end %>
          </ul>
        </section>
      </aside>
      <div class="span7">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center hero-unit">
      <h1>Welcome to Hashiru</h1>
      <h2>
        The verb hashi-ru means run in Japanese. Hashi-ru is used in simple sentences such as, “watashi wa hashiru,” meaning, “I run.” Watashi wa means I.
      </h2>

      <%= link_to "Sign up now!", signup_path,
                  class: "btn btn-large btn-primary" %>
    </div>

